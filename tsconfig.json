{
    "compilerOptions": {
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2017",
        "module": "commonjs",
        "strict": true,
        "strictPropertyInitialization": false,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "esModuleInterop": true,
        "inlineSources": true,
        "sourceMap": true,
        "outDir": "dist",
        "types": ["node", "jest"],
        "baseUrl": "./src"
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
